extends _layout

block content
  div.row
    div.small-8.columns
      h2 #{single_photo.author}
  div.row
    div.small-8.columns
      img(src='#{single_photo.link}')
      h3 #{single_photo.description}
    div.small-4.columns
      each val in table
        unless (single_photo.id === val.id)
          img(src=val.link)
          h2 #{val.author} - #{val.link.hostname}